{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "CommonJS",                
    "rootDir": "src",                   
    "outDir": "dist",                    
    "strict": true,                    
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",          
    "skipLibCheck": true,               
    "resolveJsonModule": true,           
    "noImplicitAny": true,               
    "types": ["node"]                    
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
